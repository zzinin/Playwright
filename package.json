{
  "name": "playwright-typescript-tutorial",
  "version": "1.0.0",
  "description": "A comprehensive tutorial project for Playwright with TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "report": "playwright show-report",
    "install:browsers": "playwright install",
    "install:browsers-with-deps": "playwright install --with-deps"
  },
  "keywords": [
    "playwright",
    "typescript",
    "testing",
    "automation",
    "e2e",
    "tutorial"
  ],
  "author": "Tutorial Author",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.8.0",
    "typescript": "^5.2.0"
  },
  "dependencies": {
    "dotenv": "^16.3.0"
  }
}
